{
  "kind": "collectionType",
  "collectionName": "slots",
  "info": {
    "singularName": "slot",
    "pluralName": "slots",
    "displayName": "slot",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "rating": {
      "type": "integer",
      "max": 5,
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "slot_theme": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::slot-theme.slot-theme",
      "inversedBy": "slots"
    },
    "game_link": {
      "type": "string",
      "required": true
    },
    "provider_logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "rtp": {
      "type": "decimal",
      "max": 100
    },
    "paylines": {
      "type": "biginteger"
    },
    "payline_system": {
      "type": "enumeration",
      "enum": [
        "standard",
        "cascading",
        "megaways"
      ]
    },
    "volatility": {
      "type": "enumeration",
      "enum": [
        "high",
        "medium",
        "low"
      ]
    },
    "meta_title": {
      "type": "string"
    },
    "meta_description": {
      "type": "text"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "pros": {
      "type": "richtext",
      "required": true
    },
    "cons": {
      "type": "richtext",
      "required": true
    },
    "provider": {
      "type": "string",
      "required": false
    },
    "related_slots": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::slot.slot"
    },
    "casinos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::casino.casino"
    }
  }
}
